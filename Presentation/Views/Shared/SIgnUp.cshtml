@{
    Layout = null;
}
@model UserDTO
<html>
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/site.css">
</head>

<body class="bg-info">
  <div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Tabs Titles -->
      <a class="inactive underlineHover"  asp-controller="User" asp-action="SignIn"> Sign In </a>
	<h2 class="active">Sign Up </h2>


      <!-- Icon -->
      <div class="fadeIn first">
        <img src="~/blink.gif" id="icon" alt="User Icon" />
      </div>

      <!-- Login Form -->
      <form method="post">
        <input type="text" id="login" class="fadeIn second" name="Name" placeholder="Name">
        <input type="text" id="password" class="fadeIn third" name="Username" placeholder="Surname">
        <input type="text" id="password" class="fadeIn third" name="Email" placeholder="Email">
        <input type="text" id="password" class="fadeIn third" name="Password" placeholder="Password">
        <input type="submit" class="fadeIn fourth" value="Sign Up">
      </form>

      <!-- Remind Passowrd -->
      <div id="formFooter">
        <div class="form-check">
    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
    <label class="form-check-label" for="flexCheckDefault">Accept Terms</label>
          </div>

      </div>

    </div>
  </div>

</body>
</html>
